{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Wait for STRAPI",
      "type": "shell",
      "windows": {
        "command": "do {sleep 5} until ($(curl -TimeoutSec 5 http://localhost:1337/admin).StatusCode -eq 200)"
      },
      "group": "none",
      "presentation": {
        "reveal": "silent",
        "panel": "new"
      }
    },
    {
      "label": "build strapi",
      "type": "shell",
      "windows": {
        "command": "npm run build:win:development"
      },
      "linux":{
        "command": "NODE_ENV=development yarn build"
      },
      "group": "none",
      "presentation": {
        "reveal": "silent",
        "panel": "new"
      }
    }
  ] 
}